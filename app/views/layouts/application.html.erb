<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1, maximum-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/c9084df719.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse bg-dark">
      <div class="container">
        <nav class="nav navbar-left">
          <span class="container"><a class="text-white" href="root_path">Bookers</a></span>
        </nav>
        <nav class="nav navbar-light ">
          <ul class="navbar ml-auto list-unstyled">
            <% if user_signed_in? %>
              <li>
                <%= link_to "Home", user_path(current_user.id), class: 'nav-link fa-solid fa-house text-white' %>
              </li>
              <li>
                <%= link_to "Users", users_path, class: 'nav-link fa-solid fa-users text-white' %>
              </li>
              <li>
                <%= link_to "Books", books_path, class: 'nav-link fa-solid fa-book-open text-white' %>
              </li>
              <li>
                <%= link_to "Log out", destroy_user_session_path, method: :delete, class: 'fa-solid fa-right-from-bracket text-white' %>
              </li>
             <% else %>
              <li>
                <%= link_to "Home", root_path, class: 'nav-link fa-solid fa-house text-white' %>
              </li>
              <li>
                <%= link_to "About", about_path, class: 'nav-link fa-solid fa-link text-white' %>
              </li>
              <li>
                <%= link_to "Sign up", new_user_registration_path, class: 'nav-link fa-solid fa-user-plus text-white' %>
              </li class="nav-item">
              <li>
                <%= link_to "Log in", new_user_session_path, class: 'nav-link fa-solid fa-right-to-bracket text-white' %>
              </li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>

    <main class="mb-auto">
      <%= yield %>
    </main>

    <footer>
      <p class="text-center">CopyRight Infratop.inc</p>
    </footer>
  </body>
</html>
