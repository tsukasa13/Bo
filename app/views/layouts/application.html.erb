<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1, maximum-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/c9084df719.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse bg-dark">
      <div class="container">
        <nav class="nav navbar-left">
          <span class="container"><a class="text-white" href="/">Bookers</a></span>
        </nav>
        <nav class="nav navbar-light ">
          <ul class="navbar ml-auto list-unstyled">
            <% if user_signed_in? %>
              <li>
                <%= link_to user_path(current_user.id) do %>
                  <span class="nav-link text-white"><i class="fa-solid fa-house"></i>Home</span>
                <% end %>
              </li>
              <li>
                <%= link_to users_path do %>
                  <span class="nav-link text-white"><i class="fa-solid fa-users"></i>Users</span>
                <% end %>
              </li>
              <li>
                <%= link_to books_path do %>
                  <span class="nav-link text-white"><i class="fa-solid fa-book-open"></i>Books</span>
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <span class="nav-link text-white"><i class="fa-solid fa-right-from-bracket"></i>Log out</span>
                <% end %>
              </li>
             <% else %>
              <li>
                <%= link_to root_path do %>
                  <span class="nav-link text-white"><i class="fa-solid fa-house"></i>Home</span>
                <% end %>
              </li>
              <li>
                <%= link_to about_path do %>
                  <span class="nav-link text-white"><i class="fa-solid fa-link"></i>About</span>
                <% end %>
              </li>
              <li>
                <%= link_to new_user_registration_path do %>
                <span class="nav-link text-white"><i class="fa-solid fa-user-plus"></i>Sign up</span>
                <% end %>
              </li>
              <li>
                <%= link_to new_user_session_path do %>
                <span class="nav-link text-white"><i class="fa-solid fa-right-to-bracket"></i>Log in</span>
                <% end %>
              </li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>

    <main>
      <% flash.each do |message_type, message| %>
        <div class="flash-message <%= message_type %>"><%= message %></div>
      <% end %>
      <%= yield %>
    </main>

    <footer>
      <p class="text-center">CopyRight Infratop.inc</p>
    </footer>
  </body>
</html>
