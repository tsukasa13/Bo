<div class="container">
  <div lass="col-md-3">
    <h2>User info</h2>
    <%= image_tag @user.get_profile_image(200,200) %>
    <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
    </table>
    <div class="row">
      <div class="btn btn-outline-secondary btn-block">
        <%= link_to edit_user_path(@user) do %>
          <span class="text-secondary"><i class="fa-solid fa-user-gear"></i></span>
        <% end %>
      </div>
    </div>
  </div>
</div>