<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-xs-3">
      <%= render 'users/user', users: @user %>
      <%= render 'books/book', books: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan= "3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= image_tag @user.get_profile_image(100,100) %></td>
              <td><%= @user.name %></td>
              <td><%= link_to "Show", user_path(@user.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
