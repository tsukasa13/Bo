<%= render 'books/book', books: @book %>

<h2>Book detail</h2>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan= "3"></th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td>
          <%= image_tag @user.get_profile_image(100,100) %><br>
          <%= link_to @user.name, users_path %>
        </td>
        <td><%= @book.title %></td>
        <td><%= @book.body %></td>
        <td><%= link_to "Edit", edit_book_path(@user.id) %></td>
        <td><%= link_to "Destroy", book_path(@user), method: :delete, "data-confirm" => "本当に削除しますか?" %></td>
      </tr>
  </tbody>
</table>