<table>
    <tbody>
      <tr>
        <th>name</th>
        <th><%= current_user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= current_user.introduction %></th>
      </tr>
    </tbody>
  </table>
<%= link_to "プロフィール編集", "/users/#{@user.id}/edit" %>

<h2>New book</h2>

<%= form_with model: books do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <br><%= f.submit 'Create Book' %></br>
<% end %>