<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
        <label>Title</label>
        <%= f.text_field :title, class: "btn-block" %>
        <label>Opinion</label>
        <%= f.text_area :body, class: "btn-block" %>
        <br><%=f.submit 'Update Book', class: "btn btn-success" %></br>
        <%= link_to "Show", book_path(@book.id) %>
        <%= link_to "Back", "/books" %>
      <% end %>
    </div>
  </div>
</div>
